Approach:1

n=int(input())
arr=[int(input()) for _ in range(n)]
for i in range(1,len(arr)):
   if i%2!=0:
      if arr[i-1]>arr[i]:
           arr[i-1],arr[i]=arr[i],arr[i-1]
   if i%2==0:
      if arr[i-1]<arr[i]:
          arr[i-1],arr[i]=arr[i],arr[i-1]
print(arr)      
   

